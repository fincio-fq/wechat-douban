
.header{
    text-align: center;
    width: 100%;
    height: 80rpx;
    border-bottom: 2px solid #E3E3E3;
    line-height: 80rpx;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #F9F9F9;
    z-index: 999;
    font-size: 40rpx;
    color: #ACADAB;
    font-family: "microsoft yahei";
    
}
.list{
    display:flex;
    flex-direction: column;
    margin-top: 80rpx
    

}
.list text.title{
    font-size: 30rpx;
    display: block;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-family: "microsoft yahei";
}
.list-item{
    flex: 1;
    border: 1rpx solid #eee;
    position: relative;
    width: 100%;
    height: 300rpx;
    padding: 40rpx 0 20rpx 0;
    box-sizing: border-box;
   
}

.list image{
    width: 250rpx;
    height: 230rpx;
    float: left;
}
.rating{
    width: 50rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 25rpx;
    font-weight: bold;
    text-align: center;
    border-radius: 15rpx;
    background-color: #F7705A;
    color: #fff;
   position: absolute;
   top: 30rpx;
   right: 20rpx;
    
}